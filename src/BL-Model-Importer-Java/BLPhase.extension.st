Extension { #name : #BLPhase }

{ #category : #'*BL-Model-Importer-Java' }
BLPhase >> addWidget: aWidget [
	self pageMetiers
		ifEmpty: [ self pageMetiers
				add:
					(BLPageMetier new
						name: 'autoGenerated';
						addWidget: aWidget) ]
		ifNotEmpty: [ (self pageMetiers at: 1) addWidget: aWidget ]
]

{ #category : #'*BL-Model-Importer-Java' }
BLPhase >> computeSubtitle [
	subtitle := (((self source withSuperclassHierarchy flatCollect: #outgoingInvocations)
		select: [ :invoc | 'setPhaseSubtitle(*' match: invoc signature ]) at: 1 ifAbsent: [ ^ '' ]) parameters at: 1 ifAbsent: [ '' ]
]

{ #category : #'*BL-Model-Importer-Java' }
BLPhase >> computeTitle [
	title := (((self source withSuperclassHierarchy flatCollect: #outgoingInvocations)
		select: [ :invoc | 'setPhaseTitle(*' match: invoc signature ]) at: 1 ifAbsent: [ ^ '' ]) parameters at: 1 ifAbsent: [ '' ]
]

{ #category : #'*BL-Model-Importer-Java' }
BLPhase >> relativePathToHome [
	^ '../../'
]

{ #category : #'*BL-Model-Importer-Java' }
BLPhase >> widgets [
	self pageMetiers
		ifEmpty: [ self pageMetiers
				add:
					(BLPageMetier new
						name: 'autoGenerated';
						yourself) ].
	^ (self pageMetiers at: 1) widgets
]
